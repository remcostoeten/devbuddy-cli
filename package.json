{
  "name": "@devbuddy/cli",
  "version": "0.1.0",
  "description": "A modern, scalable CLI toolbox for developers",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "devbuddy": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js interactive",
    "dev": "ts-node --esm src/index.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "check-types": "tsc --noEmit",
    "f": "prettier --write \"src/**/*.ts\"",
    "turso": "ts-node src/scripts/run-turso.ts",
    "python:turso": "python3 scripts/turso.py",
    "migrate:logger": "NODE_OPTIONS='--loader ts-node/esm' ts-node --project tsconfig.node.json src/scripts/migrate-to-logger.ts",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "test": "jest",
    "test:watch": "jest --watch",
    "fix-all": "pnpm format",
    "fix-strict": "pnpm lint:fix && pnpm format",
    "check-all": "pnpm lint && pnpm check-types && pnpm test"
  },
  "keywords": [
    "cli",
    "developer",
    "tools",
    "productivity"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@clack/core": "^0.3.3",
    "@clack/prompts": "^0.7.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "enquirer": "^2.4.1",
    "execa": "^8.0.1",
    "figlet": "^1.7.0",
    "fuzzy": "^0.1.3",
    "glob": "^10.3.10",
    "gradient-string": "^2.0.2",
    "inquirer": "^9.2.12",
    "inquirer-autocomplete-prompt": "^3.0.0",
    "inquirer-search-list": "^1.2.6",
    "ora": "^8.0.1",
    "simple-git": "^3.22.0",
    "update-notifier": "^7.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/gradient-string": "^1.1.5",
    "@types/inquirer": "^9.0.7",
    "@types/inquirer-autocomplete-prompt": "^3.0.0",
    "@types/jest": "^29.x",
    "@types/node": "^20.10.6",
    "@types/update-notifier": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "eslint-config-prettier": "^9.x",
    "eslint-plugin-prettier": "^5.x",
    "husky": "^9.x",
    "lint-staged": "^15.x",
    "prettier": "^3.x",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3",
    "jest": "^29.x",
    "ts-jest": "^29.x"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.x"
}
