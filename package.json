{
  "name": "@devbuddy/cli",
  "version": "0.1.0",
  "description": "A modern, scalable CLI toolbox for developers",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "devbuddy": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js interactive",
    "dev": "ts-node --esm src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "developer",
    "tools",
    "productivity"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "boxen": "^7.1.1",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "zod": "^3.22.4",
    "execa": "^8.0.1",
    "simple-git": "^3.22.0",
    "@clack/prompts": "^0.7.0",
    "@clack/core": "^0.3.3",
    "conf": "^12.0.0",
    "glob": "^10.3.10",
    "winston": "^3.11.0",
    "inquirer-search-list": "^1.2.6",
    "update-notifier": "^7.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
